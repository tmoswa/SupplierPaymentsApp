<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp"
    android:layout_margin="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/Layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/transaction_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:paddingLeft="5dp"
                android:text="Transaction No."
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/supplier_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/transaction_code"
                />

            <TextView
                android:id="@+id/supplier_product_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="Description"
                android:layout_toRightOf="@+id/supplier_name"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:padding="10dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/unit_price"
                android:text="Unit Price"
                android:layout_toRightOf="@+id/supplier_product_description"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/total_invoice"
                android:text="DR"
                android:layout_toRightOf="@+id/unit_price"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/total_payments_made"
                android:text="CR"
                android:layout_toRightOf="@+id/total_invoice"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/activity_date"
                android:text="Date"
                android:layout_toRightOf="@+id/total_payments_made"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
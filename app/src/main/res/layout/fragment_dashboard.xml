<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        >
        <ImageView
            android:id="@+id/horizontalline1"
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="2dp"
            android:paddingTop="0dp"
            android:background="@color/colorPrimary"
            />
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_below="@+id/horizontalline1"
            >

            <TextView
                android:id="@+id/transaction_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:paddingLeft="5dp"
                android:text="Transaction No."
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/supplier_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/transaction_code"
                />

            <TextView
                android:id="@+id/supplier_product_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="Description"
                android:layout_toRightOf="@+id/supplier_name"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:padding="10dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/unit_price"
                android:text="Unit Price"
                android:layout_toRightOf="@+id/supplier_product_description"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/total_invoice"
                android:text="DR"
                android:layout_toRightOf="@+id/unit_price"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/total_payments_made"
                android:text="CR"
                android:layout_toRightOf="@+id/total_invoice"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/activity_date"
                android:text="Date"
                android:layout_toRightOf="@+id/total_payments_made"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="10dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/horizontalline2"
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/layout1"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontalline2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:context="com.google.samples.apps.sunflower.GardenActivity"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:layout_margin="1dp"
    >

        <LinearLayout
            android:id="@+id/Layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/supplier_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier Name"
                android:padding="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/supplier_phone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier Phone"
                android:padding="10dp"
                android:layout_toRightOf="@+id/supplier_name1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/supplier_decription1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplier Description"
                android:padding="10dp"
                android:layout_toRightOf="@+id/supplier_phone1"
                android:textStyle="bold"
                />
        </LinearLayout>
    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/Layout1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/ViewStatement"
            android:text="Download Statement"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_toRightOf="@+id/ViewStatement"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>



            <LinearLayout
                android:id="@+id/Layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/Layout2"
                android:layout_marginTop="5dp"
                android:gravity="center"

                >
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
